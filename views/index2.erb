          <% @address_list.each do |item| %>
            <div id="shadow-box" class="shadow p-3 mb-5 rounded bg-light text-center">
              <h4 class="p17">
                <%= item.full_address %>
              </h4>
              <hr class="my-3">
              <p class="text-secondary">
                <span class="rounded shadow p-1 mb-1 bg-white">Latitude: <%= item.lat %></span><br><br>
                <span class="rounded shadow p-1 bg-white">Longitude: <%= item.lng %></span><br><br>
                <span class="rounded shadow p-1 bg-white">Distance to DC: <%= item.lng %></span>
              </p>
